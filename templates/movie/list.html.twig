{% extends 'base.html.twig' %}

{% block title %}Movie list{% endblock %}

{% block stylesheets %}
    <style>
        .movie-desc {
            height: 132px;
        }
    </style>
{% endblock %}

{% block body %}
    {{ include('movie/_menu.html.twig') }}

    {% if movies is not empty%}
        {% for key, movie in movies %}
        <div class="card mt-3 p-1">
            <div class="row g-0">
                <div class="col-md-2">
                    <img src="{% if movie.posterUrl %} {{ movie.posterUrl}} {% else %} {{ asset('images/default-movie.png')}} {% endif %}"
                         alt="Poster"
                         width="185"
                         height="275">
                </div>
                <div class="col-md-10">
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.name }}</h5>
                        <p class="card-text movie-desc">{{ movie.description }}</p>
                        <div class="d-flex justify-content-start">
                            <p class="card-text">
                                <small class="text-muted ratingKp">kinopoisk: {{ movie.ratingKp }} | </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted ratingImdb">IMDB: {{ movie.ratingImdb }} | </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted year">year: {{ movie.year }}</small>
                            </p>
                        </div>
                        {{ include('movie/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {% else %}
        <div>
            <h3>Your movie list is empty</h3>
        </div>
    {% endif %}
{% endblock %}
